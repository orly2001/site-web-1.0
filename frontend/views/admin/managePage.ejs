<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.1/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout">Déconnexion</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <h1 class="mb-4"><%= title %></h1>
        <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addSectionModal">Ajouter une section</button>

        <!-- Add Project Button -->
        <% if (page === 'project') { %>
            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addProjectModal">Ajouter un projet</button>
        <% } %>

        <!-- Add Team Button -->
        <% if (page === 'team') { %>
            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addTeamModal">Ajouter une équipe</button>
        <% } %>

        <!-- Add Service Button -->
        <% if (page === 'service') { %>
            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addServiceModal">Ajouter un service</button>
        <% } %>
        <!-- Add About Button -->
         <% if (page === 'about') { %>
            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addBlogModal">Ajouter un article</button>
        <% } %>
        

        <div class="row">
            <% sections.forEach(section => { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img class="card-img-top" src="<%= section.image %>" alt="<%= section.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= section.title %></h5>
                            <p class="card-text"><%= section.content %></p>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#editSectionModal<%= section.id %>">Modifier</button>
                            <form action="http://localhost:3000/admin/manage/delete-section" method="post" class="d-inline">
                                <input type="hidden" name="id" value="<%= section.id %>">
                                <input type="hidden" name="page" value="<%= page %>">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Edit Section Modal -->
                <div class="modal fade" id="editSectionModal<%= section.id %>" tabindex="-1" role="dialog" aria-labelledby="editSectionModalLabel<%= section.id %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editSectionModalLabel<%= section.id %>">Modifier la section</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form action="http://localhost:3000/admin/manage/edit-section" method="POST" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <input type="hidden" name="id" value="<%= section.id %>">
                                    <div class="form-group">
                                        <label for="title">Titre</label>
                                        <input type="text" class="form-control" name="title" value="<%= section.title %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="content">Contenu</label>
                                        <textarea class="form-control" name="content" required><%= section.content %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="image">Image</label>
                                        <input type="file" class="form-control" name="image">
                                    </div>
                                    <div class="form-group">
                                        <label for="page">Page</label>
                                        <input type="text" class="form-control" name="page" value="<%= section.page %>" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="sectionName">Nom de la Section</label>
                                        <select class="form-control" name="sectionName" required>
                                            <% allSections.forEach(s => { %>
                                                <option value="<%= s.sectionName %>"><%= s.sectionName %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <% if (page === 'team' && teams) { %>
            <div class="row mt-5">
                <h2>Équipe</h2>
                <% teams.forEach(team => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img class="card-img-top" src="<%= team.image %>" alt="<%= team.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= team.name %></h5>
                                <p class="card-text"><%= team.role %></p>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#editTeamModal<%= team.id %>">Modifier</button>
                                <form action="/admin/manage/delete-team" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="<%= team.id %>">
                                    <input type="hidden" name="page" value="<%= page %>">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Team Modal -->
                    <div class="modal fade" id="editTeamModal<%= team.id %>" tabindex="-1" role="dialog" aria-labelledby="editTeamModalLabel<%= team.id %>" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editTeamModalLabel<%= team.id %>">Modifier l'équipe</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form action="http://localhost:3000/admin/manage/edit-team" method="POST" enctype="multipart/form-data">
                                    <div class="modal-body">
                                        <input type="hidden" name="id" value="<%= team.id %>">
                                        <div class="form-group">
                                            <label for="name">Nom</label>
                                            <input type="text" class="form-control" name="name" value="<%= team.name %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="role">Rôle</label>
                                            <input type="text" class="form-control" name="role" value="<%= team.role %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="image">Image</label>
                                            <input type="file" class="form-control" name="image">
                                        </div>
                                        <div class="form-group">
                                            <label for="facebook">Facebook</label>
                                            <input type="text" class="form-control" name="facebook" value="<%= team.facebook %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="instagram">Instagram</label>
                                            <input type="text" class="form-control" name="instagram" value="<%= team.instagram %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="twitter">Twitter</label>
                                            <input type="text" class="form-control" name="twitter" value="<%= team.twitter %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="github">Github</label>
                                            <input type="text" class="form-control" name="github" value="<%= team.github %>">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <% if (page === 'service' && services) { %>
            <div class="row mt-5">
                <h2>Services</h2>
                <% services.forEach(service => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img class="card-img-top" src="<%= service.image %>" alt="<%= service.title %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= service.title %></h5>
                                <p class="card-text"><%= service.description %></p>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#editServiceModal<%= service.id %>">Modifier</button>
                                <form action="/admin/manage/delete-service" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="<%= service.id %>">
                                    <input type="hidden" name="page" value="<%= page %>">
