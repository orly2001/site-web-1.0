<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Partenaires</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Gestion des Partenaires</h1>
        <button class="btn btn-success mb-3" data-toggle="modal" data-target="#addPartnerModal">Ajouter un Partenaire</button>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="partnersTableBody">
                <!-- Les partenaires seront insérés ici par JavaScript -->
                 <% partners.forEach(partner => { %>
                    <tr>
                    <td><%= partner.name %></td>
                        <td><img src="http://localhost:3000<%=partner.image%>" alt="" class="img-fluid" style="max-width: 100px;"></td>
                        <td>
                            <button class="btn btn-warning" data-toggle="modal" data-target="#editPartnerModal<%= partner.name %>">Modifier</button>
                            <form action="/admin/partners/delete" method="POST" class="d-inline">
                                <input type="hidden" name="id" value="<%= partner.name %>">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                        <div class="modal fade" id="editPartnerModal<%= partner.name %>" tabindex="-1" role="dialog" aria-labelledby="editPartnerModalLabel<%= partner.name %>" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editPartnerModalLabel<%= partner.name %>">Modifier le Partenaire</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <form id="editPartnerForm<%= partner.name %>" action="http://localhost:3000/admin/partners/edit/<%= partner.id%>" method="POST" enctype="multipart/form-data">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="name">Nom</label>
                                                <input type="text" class="form-control" name="name" value="<%= partner.name %>" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="image">Image</label>
                                                <input type="file" class="form-control" name="image">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </tr>
                <% })%>
                
            </tbody>
        </table>
    </div>

    <!-- Add Partner Modal -->
    <div class="modal fade" id="addPartnerModal" tabindex="-1" role="dialog" aria-labelledby="addPartnerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addPartnerModalLabel">Ajouter un Partenaire</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="addPartnerForm" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">Nom</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input type="file" class="form-control" name="image" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>

        document.getElementById('addPartnerForm').addEventListener('submit', async (e) => {
            console.log(addPartnerForm);
            e.preventDefault();
            const formData = new FormData(e.target);
            try {
                const response = await fetch('http://localhost:3000/admin/partners/add', {
                    method: 'POST',
                    body: formData,
                });
                const data = await response.json();
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                alert('Erreur lors de l\'ajout du partenaire.');
            }
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
